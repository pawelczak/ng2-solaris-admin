  "scripts": {
    "typings": "typings",
    "postinstall": "npm run typings -- install",
    "build": "webpack",
    "start": "webpack-dev-server --inline --progress --profile --colors --watch --display-error-details --display-cached --history-api-fallback --port 3000",
    "unit-tests": "karma start",

    "pree2e-tests": "npm run webdriver:update -- --standalone",
    "e2e-tests": "protractor",

    "pretests": "npm run unit-tests",
    "tests": "npm run e2e-tests",

    "webdriver-manager": "webdriver-manager",
    "webdriver:update": "npm run webdriver-manager update",
    "bower": "bower install"
  },
